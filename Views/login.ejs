<html lang="es">
<link rel="stylesheet" type="text/css" href="../../css/styles.css"/>

<h1>Login</h1>
<form action="/users/login" method="POST">
    <body>
        <label for="email">Correo electrónico:</label><br>
        <input type="email" name="email" id="email" value="<%= locals.old && old.email %>">
        <% if (locals.errors && errors.email) { %>
            <p class = "feedback"><%=errors.email.msg%></p><br>
            <% } %>
         
        <br>
        <label for="password">Contraseña:</label><br>
        <input type="password" name="password" id="password" value="<%= locals.old && old.password %>"><br>
        <% if (locals.errors && errors.password) { %>
            <p class = "feedback"><%=errors.password.msg%></p><br>
            <% } %>
            <% if (locals.check !=null && check == false) { %>
                <p class = "feedback">La contraseña ingresada es incorrecta</p><br>
                <% } %>
            <% if (locals.notFound !=null && notFound) { %>
                <p class = "feedback">El usuario ingresado no existe</p><br>
                <% } %>
            <button type="submit">Login</button><br>
        </form>
        <% if (locals.loggedIn && loggedIn){ %>
        <a href="/users/unlog"><button type="submit">Salir</button></a><br>        
        <% } %>
        <a href="/movies"><button type="submit">Regresar</button></a> 
    </body>
  </html>